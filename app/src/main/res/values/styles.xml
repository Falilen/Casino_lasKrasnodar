<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основная тема приложения -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>




    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_animation</item>

    </style>

    <style name="MagicProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:progressDrawable">@drawable/button_gold_gradient</item>
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
    </style>

</resources>