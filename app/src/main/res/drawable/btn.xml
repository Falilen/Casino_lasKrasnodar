<?xml version="1.0" encoding="utf-8"?>
<shape android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Фон кнопки -->
    <solid android:color="@color/bg"/> <!-- Оранжевый цвет, можно изменить -->

    <!-- Скругленные углы -->
    <corners android:radius="12dp"/>

    <!-- Толщина границы -->
    <stroke android:width="10dp" android:color="@color/black"/> <!-- Граница чуть темнее фона -->

    <!-- Отступы внутри кнопки -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>