<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Базовый слой - тёмный фон -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#1A1D28"/>
        </shape>
    </item>

    <!-- Второй слой - градиентная подсветка -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#1c101b"
                android:endColor="#191521"/>
        </shape>
    </item>

    <!-- Третий слой - золотая окантовка -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <stroke
                android:width="2dp"
                android:color="#C5A467"/>
        </shape>
    </item>

</layer-list>