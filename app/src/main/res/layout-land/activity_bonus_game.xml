<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_bonus"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/spirit_animation"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/blue_dot"
        android:visibility="invisible"
        android:translationZ="10dp"
        />


    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/magicbg">






        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/slots_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false">




        <FrameLayout

            android:id="@+id/frame_bar"
            android:layout_width="570dp"
            android:layout_height="330dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn"
            android:translationX="-70dp"
            android:translationY="-10dp"
            android:layout_gravity="center"

            android:clipChildren="false"
            android:clipToPadding="false">

            <com.example.casinolaskrasnodar.WinLineView
                android:id="@+id/winLineView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" />





            <GridLayout

                android:id="@+id/slot_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:alignmentMode="alignMargins"
                android:columnCount="5"
                android:rowCount="3">

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_gravity="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_gravity="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_gravity="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image10"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_gravity="center"
                    android:scaleType="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image11"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:layout_gravity="center"
                    android:scaleType="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image12"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:layout_gravity="center"
                    android:scaleType="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image13"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:layout_gravity="center"
                    android:scaleType="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image14"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:layout_gravity="center"
                    android:scaleType="center" />

                <com.example.casinolaskrasnodar.ImageViewScrolling.ImageViewScrolling
                    android:id="@+id/image15"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:layout_gravity="center"
                    android:scaleType="center" />

            </GridLayout>



        </FrameLayout>


        <FrameLayout
            android:id="@+id/witch_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:layout_gravity="center|end">


            <ProgressBar
                android:id="@+id/spirit_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginEnd="0dp"
                android:translationY="10dp"
                android:layout_marginBottom="-10dp"
                android:max="10"
                android:layout_gravity="top|center"
                android:progress="0"
                android:progressDrawable="@drawable/progress_custom"
                android:backgroundTint="#00000000"
                android:thumb="@drawable/thumb_custom"
                android:visibility="visible" />

            <!-- Ведьма -->
            <VideoView
                android:id="@+id/witch_character"
                android:layout_width="550px"
                android:translationY="-5dp"
                android:translationX="0dp"
                android:layout_height="800px"
                android:background="@android:color/transparent"
                android:contentDescription="Witch Character"
                android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/spirit_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false" />
        </FrameLayout>

        <!-- Ваша нижняя панель -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/menu_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">



        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="TODO"
            android:src="@drawable/menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/menu_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:orientation="vertical">


            </LinearLayout>

            <!-- Ставка -->
            <LinearLayout
                android:id="@+id/bet_controls"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="СТАВКА"
                    android:textColor="#FFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_bet"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 $"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <!-- Кнопка Max Bet и Spin -->
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">



                <!-- Кнопка Spin -->
                <Button
                    android:id="@+id/btn_up"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/spin"
                    android:padding="10dp"

                    android:text="SPIN"
                    android:textSize="20dp"
                    android:textColor="#FFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Выигрыш -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ВЫИГРЫШ"
                    android:textColor="#FFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_win"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Баланс -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="БАЛАНС"
                    android:textColor="#FFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000$"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#80000000"
        android:clickable="true"
        android:visibility="gone" />

    <!-- Боковое меню -->
    <include
        android:id="@+id/side_menu"
        layout="@layout/side_menu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:visibility="invisible"
        android:translationX="-280dp"/>

    <!--добавить btn down frame -->



</FrameLayout>